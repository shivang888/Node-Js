<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crude List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: crimson;
        font-family: 'Roboto', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .container {
        background-color: goldenrod;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 400px;
        max-width: 100%;
        transition: transform 0.2s;
      }
      .container:hover {
        transform: translateY(-5px);
      }
      h1 {
        font-size: 2rem;
        color: #333;
        text-align: center;
        margin-bottom: 20px;
      }
      .form-1 input {
        border-radius: 8px;
        padding: 10px;
        border: 1px solid #ced4da;
        width: calc(100% - 22px);
        margin-bottom: 15px;
        transition: border 0.3s;
      }
      .form-1 input:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
      }
      .btn-primary {
        background-color: #007bff;
        border-radius: 8px;
        padding: 10px;
        width: 100%;
        font-size: 1rem;
        font-weight: bold;
        transition: background-color 0.3s;
      }
      .btn-primary:hover {
        background-color: #0056b3;
      }
      .record-list {
        margin-top: 20px;
        list-style: none;
        padding-left: 0;
      }
      li {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 10px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      li:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }
      .addName {
        font-size: 1.1rem;
        color: #495057;
      }
      .btn-custom {
        border-radius: 8px;
        font-size: 0.9rem;
        margin-left: 10px;
        transition: transform 0.3s;
      }
      .btn-warning {
        background-color: #ffb703;
        border: none;
      }
      .btn-warning:hover {
        transform: scale(1.05);
      }
      .btn-danger {
        background-color: #ef233c;
        border: none;
      }
      .btn-danger:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Shivang Crude List</h1>
      <form action="/add" method="post" class="form-1">
        <input
          type="text"
          name="record"
          class="form-control"
          placeholder="Enter new record"
          required
        />
        <button type="submit" class="btn btn-primary">Add Record</button>
      </form>

      <ul class="record-list">
        <% records.forEach((record, index) => { %>
        <li>
          <span class="addName"><%= record %></span>
          <div>
            <form action="/edit/<%= index %>" method="post" style="display: inline;">
              <button type="submit" class="btn btn-warning btn-sm btn-custom">Edit</button>
            </form>
            <form action="/delete/<%= index %>" method="get" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm btn-custom">Delete</button>
            </form>
          </div>
        </li>
        <% }) %>
      </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
